<div id="item-<%= @item.id %>">
	<div class="col-md-5">
		<%= link_to main_img_for(@item, size: 200), @shop.url %>
	</div>
	<div class="col-md-3">
		<div class="user"><%= link_to @item.name, @item %></div>

		<div class="price"><%= link_to @item.price, @item %></div>

		<h3 class="lowercase"> Description </h3>
		<div class="description"><%= link_to @item.description, @item %></div>
	</div>
</div>