<% provide(:title, @title) %>
<% provide(:user, @user) %>

<div class="row">
  <aside class="col-md-2">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      
    </section>
  </aside>
  <div class="col-md-9">
    <h3 class="lowercase"><%= @title %></h3>
    <% if @shops.any? %>
      <ul class="users follow">
        <%= render @shops %>
      </ul>
    <% end %>
  </div>
</div>