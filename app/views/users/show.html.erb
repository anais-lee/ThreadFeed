<% provide(:title, @user.name) %>

<div class="row">
	<aside class="col-md-2">
		<section class="user_info">
			<%= render 'shared/user_info' %>
		</section>
		<section class="stats">
	      	<%= render 'shared/stats' %>
	    </section>
	</aside>
	<div class="col-md-9">
	    <h3 class="lowercase small-title">Shops I Follow</h3>
	    <% if @shops.any? %>
	      <ul class="users follow">
	        <%= render @shops %>
	      </ul>
	      <%= will_paginate @shops %>
	    <% end %>

	</div>
</div>